{
  "parser": "babel-eslint",
  "rules": {
    "indent": [ 2, 2, { "SwitchCase": 1 }],
    "quotes": [ 2, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "never" ],
    "no-class-assign": 0,
    "no-console": [ 2, { allow: ["warn", "error"] }],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
  },
  "globals": {
    "document": false,
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
